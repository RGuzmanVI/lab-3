<h1 class="text-center">Contact Us</h1>
<p class="text-center text-muted">Complaints ? Acknowledgments ? Fun facts ? We would love to hear from you!</p>

<%= form_with url: contact_path, local: true, class: "mt-4" do |f| %>
    <div class="mb-3">
        <%= f.label :name, "Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-control", required: true %>
    </div>
    <div class="mb-3">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, class: "form-control", required: true %>
    </div>
    <div class="mb-3">
        <%= f.label :message, "Message", class: "form-label" %>
        <%= f.text_area :message, class: "form-control", rows: 3, required: true %>
    </div>
    <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>

<!-- Mensaje de confirmaciÃ³n (oculto por defecto) -->
<div id="thankYouMessage" class="alert alert-success mt-3" style="display: none;">
    Thank you for your message, we will contact you soon.
</div>

<script>
    document.querySelector("form").addEventListener("submit", function(event) {
        event.preventDefault();
        document.getElementById("thankYouMessage").style.display = "block";
        this.reset();
    });
</script>
